@model NeaTICs_v2.Models.Events

@{
    ViewBag.Title = "Crear";
}

@section Head{
    @Styles.Render("~/Content/jquery-datetimepicker")
}

<h2>Crear</h2>

@using (Html.BeginForm("Create", "Event", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Eventos</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class="col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextAreaFor(model => model.Content, 15, 0, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Place, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Place, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Place)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CreateAt, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.CreateAt, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CreateAt)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartAt, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-2">
                @Html.TextBoxFor(model => model.StartAt, new { @class = "form-control", type = "time" })
                @Html.ValidationMessageFor(model => model.StartAt)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndAt, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-2">
                @Html.TextBoxFor(model => model.EndAt, new { @class = "form-control", type = "time" })
                @Html.ValidationMessageFor(model => model.EndAt)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Url, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Url, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Url)
            </div>
        </div>

        <div class="form-group tooltip-examples">
            <label class="col-sm-2 control-label" data-toogle="tooltip" data-original-title="Resolución optima: 1080 * 720 Tamaño de archivo recomendado: 5 Mb">Image to Upload</label>

            <div class="col-sm-8">
                <input type="file" id="ImageToUpload" name="ImageToUpload" class="help-block" multiple="multiple" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al Listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery-datetimepicker")
    <script type="text/javascript">
        $('#CreateAt').datetimepicker({
            lang: 'es',
            timepicker: false,
            format: 'd/m/Y'
        });
        $('#StartAt').datetimepicker({
            datepicker: false,
            format: 'H:i'
        });
        $('#EndAt').datetimepicker({
            datepicker: false,
            format: 'H:i'
        });

        $(document).ready(function () {
            $(".tooltip-examples label").tooltip({
                placement: 'bottom'
            });
        });

    </script>
}
